<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RunningFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_runningTimePlacement"
        android:text="Running Time:"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_timer"
        android:text="00:00"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_runningTimePlacement"
        android:layout_marginTop="40sp"
        android:textSize="100sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_runningDistancePlacement"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_timer"
        android:text="Running Distance:"
        android:textSize="20sp"
        android:layout_marginTop="250sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_runningDistance"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_runningDistancePlacement"
        android:hint="   Distance in Km          "
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_startRunning"
        android:layout_centerInParent="true"
        android:text="Start Timer"
        android:textSize="22sp"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submitRunningDistance"
        android:layout_centerHorizontal="true"
        android:text="Submit Distance and Time"
        android:textSize="12.5sp"
        android:textAllCaps="false"
        android:layout_below="@+id/editText_runningDistance"
        android:layout_marginTop="10sp"/>

</RelativeLayout>